<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:task="http://www.springframework.org/schema/task"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/task
		http://www.springframework.org/schema/task/spring-task-3.1.xsd">

	<context:component-scan base-package="com.bap">
		<context:exclude-filter type="regex"
			expression="com.bap.bos.web.*" />
			<context:exclude-filter type="regex"
			expression="com.bap.web.*" />
	</context:component-scan>

	<task:annotation-driven executor="exceptionHandlingTaskExecutor" />

	<bean id="exceptionHandlingTaskExecutor"
		class="com.bap.components.ExceptionHandlingAsyncTaskExecutor">
		<constructor-arg ref="defaultTaskExecutor" />
	</bean>
	<task:executor id="defaultTaskExecutor" pool-size="5" />

	<bean class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />

</beans>